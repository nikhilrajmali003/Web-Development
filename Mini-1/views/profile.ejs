<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-900 text-white">

    <div class="min-h-screen flex items-center justify-center p-6">
        <!-- Main Container -->
        <div class="max-w-2xl w-full bg-gray-800 rounded-lg shadow-md p-6">
            <!-- Header -->
            <div class="flex justify-between items-center mb-6">
                <h1 class="text-3xl">
                    <span class="font-light">Hello</span>, <span class="font-semibold"><%= user.name %></span>
                </h1>
                <a href="/logout" class="px-4 py-2 bg-red-500 text-white rounded-md hover:bg-red-600 transition">
                    Logout
                </a>
            </div>

            <!-- Create Post Form -->
            <h5 class="text-xl mb-4">Create a New Post</h5>
            <form action="/post" method="post" class="mb-8">
                <textarea 
                    name="content"
                    placeholder="What's on your mind?" 
                    class="w-full resize-none p-3 bg-gray-900 border border-gray-700 rounded-md focus:border-blue-500 focus:outline-none text-white"
                    rows="4"
                    required></textarea>
                <button type="submit" class="px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600 transition mt-3">
                    Create Post
                </button>
            </form>

            <!-- User's Posts -->
            <div class="mt-12">
                <h3 class="text-zinc-400 text-lg mb-4">Your Posts</h3>
                <div class="postcontainer space-y-4">
                    <% if (user.posts.length === 0) { %>
                        <p class="text-gray-500">No posts yet.</p>
                    <% } else { %>
                        <% user.posts.reverse().forEach(function(post) { %>
                            <div class="post w-full p-4 bg-gray-900 rounded-md border border-zinc-700 hover:bg-gray-800 transition" id="post-<%= post._id %>">
                                <h4 class="text-blue-500 mb-2">@<%= post.username %></h4>
                                <p class="text-sm tracking-tight"><%= post.content %></p>

                                <!-- Like Count -->
                                <small class="mt-2 inline-block" id="like-count-<%= post._id %>">
                                    <%= post.likes.length %> <%= post.likes.length === 1 ? "Like" : "Likes" %>
                                </small>

                                <!-- Like/Unlike Button -->
                                <div class="btns flex gap-4 mt-4">
                                    <button class="like-btn text-blue-400 hover:underline cursor-pointer"
                                            data-post-id="<%= post._id %>"
                                            data-liked="<%= post.likes.includes(user._id) %>">
                                        <%= post.likes.includes(user._id) ? "Unlike" : "Like" %>
                                    </button>
                                    <a class="text-gray-400 hover:underline cursor-pointer" href="/edit/<%= post._id %>">Edit</a>
                                </div>
                            </div>
                        <% }); %>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <!-- JavaScript for Like/Unlike -->
    <script>
        document.querySelectorAll('.like-btn').forEach(button => {
            button.addEventListener('click', async function() {
                const postId = this.getAttribute('data-post-id');
    
                try {
                    const response = await fetch(`/like/${postId}`, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' }
                    });
    
                    const data = await response.json();
                    if (data.success) {
                        const likeCountElement = document.getElementById(`like-count-${postId}`);
                        
                        // Update Like Count
                        likeCountElement.textContent = `${data.likesCount} ${data.likesCount === 1 ? "Like" : "Likes"}`;
    
                        // Update Button Text & Attribute (Fixing Issue!)
                        this.textContent = data.liked ? "Unlike" : "Like";
                        this.setAttribute('data-liked', data.liked.toString());
                    }
                } catch (error) {
                    console.error('Error:', error);
                }
            });
        });
    </script>
    

</body>
</html>
